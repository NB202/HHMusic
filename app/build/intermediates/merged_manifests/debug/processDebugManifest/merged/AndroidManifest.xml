<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hhmusic"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="16"
        android:targetSdkVersion="29" />

    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.BROADCAST_STICKY" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.DISABLE_KEYGUARD" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE" />
    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />

    <application
        android:name="com.hhmusic.MainApplication"
        android:allowBackup="true"
        android:appComponentFactory="androidx.core.app.CoreComponentFactory"
        android:debuggable="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:testOnly="true"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.hhmusic.activity.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hhmusic.activity.LoadingActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hhmusic.activity.NetSearchWordsActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hhmusic.activity.PlayingActivity"
            android:launchMode="singleTask"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="com.hhmusic.LAUNCH_NOW_PLAYING_ACTION" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hhmusic.activity.LocalSearchActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hhmusic.activity.SelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hhmusic.activity.PlaylistSelectActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hhmusic.activity.PlaylistManagerActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hhmusic.activity.AlbumsDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hhmusic.activity.TabActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hhmusic.activity.DownActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hhmusic.activity.PlaylistActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hhmusic.activity.RecentActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hhmusic.activity.NetItemChangeActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hhmusic.activity.ArtistDetailActivity"
            android:screenOrientation="portrait" />
        <activity
            android:name="com.hhmusic.activity.RadioDetailActivity"
            android:screenOrientation="portrait" />
        <activity android:name="com.hhmusic.activity.RankPlaylistActivity" />

        <service android:name="com.hhmusic.downmusic.DownService" >
            <intent-filter>
                <action android:name="com.hhmusic.downtaskadd" />
                <action android:name="com.hhmusic.resumestarttask" />
                <action android:name="com.hhmusic.startalltask" />
                <action android:name="com.hhmusic.multidowntaskadd" />
                <action android:name="com.hhmusic.pausetask" />
                <action android:name="com.hhmusic.pausealltask" />
                <action android:name="com.hhmusic.cacletask" />
                <action android:name="com.hhmusic.caclealltask" />
            </intent-filter>
        </service>
        <service
            android:name="com.hhmusic.service.MediaService"
            android:process=":main" />

        <receiver android:name="com.hhmusic.receiver.MediaButtonIntentReceiver" >
            <intent-filter>
                <action android:name="android.intent.action.MEDIA_BUTTON" />
                <action android:name="android.media.AUDIO_BECOMING_NOISY" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.hhmusic.receiver.LaunchNowPlayingReceiver" >
            <intent-filter>
                <action android:name="com.hhmusic.LAUNCH_NOW_PLAYING_ACTION" />
            </intent-filter>
        </receiver>
        <receiver android:name="com.hhmusic.widget.SimpleWidgetProvider" >
            <intent-filter>
                <action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
                <action android:name="com.hhmusic.metachanged" />
                <action android:name="com.hhmusic.change_music" />
                <action android:name="com.hhmusic.progress" />
            </intent-filter>

            <meta-data
                android:name="android.appwidget.provider"
                android:resource="@xml/appwidget_info" />
        </receiver>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.hhmusic.fileProvider"
            android:exported="false"
            android:grantUriPermissions="true" >
            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/file_provider" />
        </provider>
    </application>

</manifest>